{{!--
    Add Evergage data attributes to elements you wish to track in the test experience.

    Note: Using Evergage data attributes allows you to track stats with Evergage and
    requires the "Campaign Stat Tracking Gear" installed and enabled for your dataset.

    Visit the Campaign Stats Tracking documentation to learn more:
    https://developer.evergage.com/templates/campaign-stats.
--}}

<div id="evg-product-recs" data-evg-campaign-id="{{campaign}}" data-evg-experience-id="{{experience}}" data-evg-campaign-group="test">
    <div class="evg-recs-header">
        {{header}}
    </div>
    <div class="evg-recs-container">
        {{#each products}}
        <div class="evg-item" data-evg-product-id="{{id}}">
            <a href="{{attributes.url.value}}">
                <img class="evg-image" src="{{attributes.imageUrl.value}}" alt="{{attributes.name.value}}"/>
            </a>
            <div class="evg-item-text">
                <a class="evg-name" href="{{attributes.url.value}}">{{attributes.name.value}}</a>
                <div class="evg-price">
                    ${{attributes.price.value}}
                </div>
                <div class="evg-rating">
                    Rating: {{attributes.rating.value}}
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>